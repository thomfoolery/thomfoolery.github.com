/* BOILER PLATE RESET/REFIX */
@import url('reset.css');

/**
 * Primary styles
 * Author: Thomas Yuill
 */

/* 
 * =========
 * STRUCTURE
 * ========= */

html{
	background-color: #000;
	font-size: 10px;
	font-family: arial, sans-serif;
	height: 100%;
}

body{
	color: #999;
	font-size: 1em;
	min-height: 500px;
	padding: 0;
	position: relative;
}
.cssanimations.js body{
	height: 100%;
	overflow: hidden;
}
.cssanimations.js body section{
	display: none;
}
.cssanimations.js body.unlockScrollbar{
	overflow: visible;
}
.cssanimations.js body.unlockScrollbar section{
	display: block;
}

a{
	color: #fff;
	text-decoration: none;
}
a:hover,
a:focus,
a:active{
	text-decoration: underline;
}

#wrap,
#main{
	position: relative;
	z-index: 9;
}

/* HEADER */
header{
	height: 100px;
	left: 0;
	margin-top: 0px;
	position: fixed;
	top: 0%;
	right: 0;
}

#page-title{
	width: 790px;
	margin: 0 auto;
}

/* SECTIONS */
section{
	height: 100%;
}

/* FOOTER */
footer{
	position: fixed;
	bottom: 0;
	width: 100%;
}

/* 
 * ====
 * SKIN
 * ==== */
.bg-main{
	background-attachment: fixed;
	background-position: center top;
	height: 100%;
	left: 0;
	position: fixed;
	top: 0;
	width: 100%;
	z-index: 1;
}
.background-1{
	background-image: url(../img/bg/filigree-tile-black.jpg);
}
.background-2{
	background-image: url(../img/bg/filigree-tile-white.jpg);
}

header{
	z-index: 9999;
}
h1 span.on{
	color: #fff;
	text-shadow: 0 0 10px #fff;
	z-index: 99999;
}
#full-name{
	position: relative;
	font-size: 90px;
	letter-spacing: -12px;
	line-height: 100px;
	text-align: center;
}
#full-name .char19{
	position: relative;
	right: -2px;
}
#full-name .char20{
	position: relative;
	right: -4px;
}
#full-name .char21{
	position: relative;
	right: -6px;
}
#page-title{
	position: relative;
}
#page-title img.logo{
	height: 70px;
	margin-right: -40px;
	position: absolute;
	right: 0;
	top: 45px;
	width: 40px;
}
#job-title{
	color: #feba01;
	font-size: 15px;
	margin-right: 15px;
	text-align: right;
}

section{
	height: 100%;
	margin: 0 auto;
	width: 700px;
}
section .heading{
	background: url(../img/header-decoration.png) center bottom no-repeat;
	color: #feba01;
	font-size: 5em;
	letter-spacing: -.1em;
	line-height: 1em;
	margin-bottom: .5em;
	padding-top: .8em;
	padding-bottom: .8em;
	position: relative;
	text-align: center;
	/*text-shadow: 0 0 10px #000;*/
	z-index: 9;
}
section .heading a{
	color: #feba01;
	text-decoration: none;
}
section .sub.heading{
	background: none;
	font-size: 2em;
	letter-spacing: normal;
	margin: 0;
	padding: 1em 0;
}
section .sub.heading a{
	position: relative;
	color: #999;
	display: block;
	margin: 0 auto;
	text-decoration: none;
	width: 250px;
	
	-webkit-transition: color .5s ease-in-out;
	-moz-transition: color .5s ease-in-out;
	transition: color .5s ease-in-out;
}
section .sub.heading a:before,
section .sub.heading a:after{
	position: absolute;
	content: 'â™¦';
	margin: 0 10px;
}
section .sub.heading a:before{
	left: 0;
}
section .sub.heading a:after{
	right: 0;
}
section .sub.heading a:hover{
	color: #feba01;
}
section .footer-decoration{
	display: block;
	margin: 0 auto;
}

article{
	position: relative;
	margin: 10px auto;
	overflow: visible !important;
}
article .borderNW{
	border-top: 1px solid #feba01;
	border-left: 1px solid #feba01;
	height: 0;
	position: absolute;
	right: 0;
	top: 0;
	width: 0;
}
article .borderSE{
	border-bottom: 1px solid #feba01;
	border-right: 1px solid #feba01;
	bottom: 0;
	height: 0;
	position: absolute;
	left: 0;
}
article.open .sub.heading a,
article.open .sub.heading a{
	color: #feba01;
}
article.open .sub.heading a:before,
article.open .sub.heading a:after{
	content: none;
}

.js article .content{
	display: none;
	/* */
	height: 200px;
	overflow: visible !important;
}

#btm-nav{
	background: url(../img/btm-nav.png) center center no-repeat;
	height: 150px;
	line-height: 150px;
	margin: 0 auto;
	position: relative;
	text-align: center;
	width: 675px;
}
#btm-nav .marker{
	border: 20px solid #feba01;
	border-color: #feba01 transparent #feba01 transparent;
	height: 26px;
	position: absolute;
	left: 20%;
	width: 0;
	margin: 42px 0 0 -20px;
	z-index: 99;
}

/* 
 * ==========
 * ANIMATIONS
 * ========== */
header{
	-webkit-animation: header 5s 1 ease-in-out;
	-moz-animation: header 5s 1 ease-in-out;
	-ms-animation: header 5s 1 ease-in-out;
	-o-animation: header 5s 1 ease-in-out;
}
#page-title{
	-webkit-animation: page-title 5s 1 ease-in-out;
	-moz-animation: page-title 5s 1 ease-in-out;
	-ms-animation: page-title 5s 1 ease-in-out;
	-o-animation: page-title 5s 1 ease-in-out;
}
#page-title img.logo{
	-webkit-animation: bolt-logo 6s 1 ease-in-out;
	-moz-animation: bolt-logo 6s 1 ease-in-out;
	-ms-animation: bolt-logo 6s 1 ease-in-out;
	-o-animation: bolt-logo 6s 1 ease-in-out;
}
footer{
	-webkit-animation: footer 5s 1 ease-in-out;
	-moz-animation: footer 5s 1 ease-in-out;
	-ms-animation: footer 5s 1 ease-in-out;
	-o-animation: footer 5s 1 ease-in-out;
}

@-webkit-keyframes header{
	0% 		{ margin: -50px; top: 50%; }
	90% 	{ margin: -50px; top: 50%; }
	100% 	{ margin-top: 0; top: 0%; }
}
@-moz-keyframes header{
	0% 		{ margin: -50px; top: 50%; }
	90% 	{ margin: -50px; top: 50%; }
	100% 	{ margin-top: 0; top: 0%; }
}
@-ms-keyframes header{
	0% 		{ margin: -50px; top: 50%; }
	90% 	{ margin: -50px; top: 50%; }
	100% 	{ margin-top: 0; top: 0%; }
}
@-o-keyframes header{
	0% 		{ margin: -50px; top: 50%; }
	90% 	{ margin: -50px; top: 50%; }
	100% 	{ margin-top: 0; top: 0%; }
}
@-webkit-keyframes page-title{
	0% 		{ opacity: 0; -webkit-transform: scale(.01); }
	60% 	{ opacity: 1; -webkit-transform: scale(1.2); }
	80% 	{ opacity: 1; -webkit-transform: scale(1); }
	100% 	{ opacity: 1; -webkit-transform: scale(1); }
}
@-moz-keyframes page-title{
	0% 		{ opacity: 0; -moz-transform: scale(.01); }
	80% 	{ opacity: 1; -moz-transform: scale(1); }
	100% 	{ opacity: 1; -moz-transform: scale(1); }
}
@-ms-keyframes page-title{
	0% 		{ opacity: 0; -webkit-transform: scale(.01); }
	60% 	{ opacity: 1; -webkit-transform: scale(1.2); }
	80% 	{ opacity: 1; -webkit-transform: scale(1); }
	100% 	{ opacity: 1; -webkit-transform: scale(1); }
}
@-o-keyframes page-title{
	0% 		{ opacity: 0; -moz-transform: scale(.01); }
	80% 	{ opacity: 1; -moz-transform: scale(1); }
	100% 	{ opacity: 1; -moz-transform: scale(1); }
}
@-webkit-keyframes bolt-logo{
	0% 		{ opacity: 0; }
	60% 	{ opacity: 0; }
	70% 	{ opacity: 1; }
}
@-moz-keyframes bolt-logo{
	0% 		{ opacity: 0; }
	60% 	{ opacity: 0; }
	70% 	{ opacity: 1; }
}
@-ms-keyframes bolt-logo{
	0% 		{ opacity: 0; }
	60% 	{ opacity: 0; }
	70% 	{ opacity: 1; }
}
@-o-keyframes bolt-logo{
	0% 		{ opacity: 0; }
	60% 	{ opacity: 0; }
	70% 	{ opacity: 1; }
}
@-webkit-keyframes footer{
	0% 		{ opacity: 0; }
	90% 	{ opacity: 0; }
	100% 	{ opacity: 1; }
}
@-moz-keyframes footer{
	0% 		{ opacity: 0; }
	90% 	{ opacity: 0; }
	100% 	{ opacity: 1; }
}
@-ms-keyframes footer{
	0% 		{ opacity: 0; }
	90% 	{ opacity: 0; }
	100% 	{ opacity: 1; }
}
@-o-keyframes footer{
	0% 		{ opacity: 0; }
	90% 	{ opacity: 0; }
	100% 	{ opacity: 1; }
}

/* Accesibility Tools */
.text-size-default{
	font-size: 10px;
}
.text-size-larger{
	font-size: 15px;
}
.text-size-largest{
	font-size: 20px;
}

/* Mobile */
@media all and (orientation:portrait)
and @media all and (orientation:landscape)
and @media screen and (max-device-width: 480px) {
	@import url('mobile.css');
}
/* Print styles. */
@media print {
	@import url('print.css');
}

/**
 * Non-semantic helper classes: please define your styles before this section.
 */
/* For image replacement */
.ir { display: block; text-indent: -999em; overflow: hidden; background-repeat: no-repeat; text-align: left; direction: ltr; }
/* Hide for both screenreaders and browsers:
   css-discuss.incutio.com/wiki/Screenreader_Visibility */
.hidden { display: none; visibility: hidden; }
/* Hide only visually, but have it available for screenreaders: by Jon Neal.
  www.webaim.org/techniques/css/invisiblecontent/  &  j.mp/visuallyhidden */
.visually-hidden { border: 0; clip: rect(0 0 0 0); height: 1px; margin: -1px; overflow: hidden; padding: 0; position: absolute; width: 1px; }
/* Extends the .visuallyhidden class to allow the element to be focusable when navigated to via the keyboard: drupal.org/node/897638 */
.visually-hidden.focusable:active,
.visually-hidden.focusable:focus { clip: auto; height: auto; margin: 0; overflow: visible; position: static; width: auto; }
/* Hide visually and from screenreaders, but maintain layout */
.invisible { visibility: hidden; }
/* The Magnificent Clearfix: Updated to prevent margin-collapsing on child elements.
   j.mp/bestclearfix */
.clearfix:before, .clearfix:after { content: "\0020"; display: block; height: 0; overflow: hidden; }
.clearfix:after { clear: both; }
/* Fix clearfix: blueprintcss.lighthouseapp.com/projects/15318/tickets/5-extra-margin-padding-bottom-of-page */
.clearfix { zoom: 1; }